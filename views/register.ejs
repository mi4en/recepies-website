<% include ./partials/header %>
<div class="row justify-content-center">
  <div class="col-md-12 text-center"><h1 class="h3 mb-3 font-weight-normal">Please sign up</h1></div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <form class="form-signup" action="/register" method="POST">
      <label for="inputUsername" class="sr-only">Username</label>
      <input
        type="text"
        id="inputUsername"
        class="form-control"
        name="username"
        placeholder="Username"
        required
        autofocus
      />
      <label for="inputPassword" class="sr-only">Password</label>
      <input
        type="password"
        id="inputPassword"
        class="form-control"
        name="password"
        placeholder="Password"
        required
      />
      <label for="inputEmail" class="sr-only">E-mail</label>
      <input
        type="email"
        id="inputEmail"
        class="form-control"
        name="email"
        placeholder="Email"
        required
      />
      <label for="inputAvatar" class="sr-only">Avatar</label>
      <input
        type="avatar"
        id="inputAvatar"
        class="form-control"
        name="avatar"
        placeholder="Avatar Url"
      />
      <!-- <label for="inputAdminCode" class="sr-only">Admin Code</label>
      <input
        type="text"
        id="inputAdminCode"
        class="form-control"
        name="adminCode"
        placeholder="Admin code"
      /> -->
      <button class="btn btn-lg btn-primary btn-block mt-2" type="submit">
        Sign up
      </button>
    </form>
    <div class="form-signup">
      <p><a class="btn btn-sm btn-primary" href="/recipes">Go Back</a></p>
    </div>
  </div>
</div>
<% include ./partials/footer %>
